    <PreferenceCategory
        android:title="@string/thinking_time_title"/>
    <EditTextPreference
        android:key="etpThinkingTime"
        android:title="@string/game_timer"
        android:inputType="numberSigned"
        android:maxLines="1"/>

</PreferenceScreen>